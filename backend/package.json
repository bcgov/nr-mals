{
  "name": "mals",
  "version": "5.7.0",
  "private": true,
  "scripts": {
    "serve": "nodemon --inspect src/bin/www",
    "start": "node src/bin/www",
    "start:dev": "nodemon --inspect src/bin/www",
    "deploy": "npm ci --omit=dev && npx prisma generate",
    "lint": "eslint --ext js,jsx src",
    "lint:fix": "eslint --ext js,jsx src --fix",
    "format": "prettier --write src",
    "format:check": "prettier src --check",
    "make-badges": "istanbul-badges-readme --logo=vitest --exitCode=1",
    "make-badges:ci": "npm run make-badges -- --ci",
    "test": "vitest --dir src",
    "test:cov": "prisma generate && vitest run --coverage",
    "test:e2e": "vitest --dir test",
    "introspect": "npx prisma db pull && shx cat prisma/views.prisma >> prisma/schema.prisma"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 11
    },
    "rules": {}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/nr-mals.git"
  },
  "keywords": [
    "express",
    "prisma"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcgov/nr-mals/issues"
  },
  "homepage": "https://github.com/bcgov/nr-mals#readme",
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "@types/axios-token-interceptor": "^0.2.1",
    "adm-zip": "^0.5.3",
    "api-problem": "^9.0.0",
    "axios": "^0.21.0",
    "axios-oauth-client": "^1.4.0",
    "axios-token-interceptor": "^0.2.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "keycloak-connect": "^26.1.1",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1",
    "read-excel-file": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "7.21.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.20",
    "prettier": "^2.0.5",
    "prisma": "^6.3.0",
    "shx": "^0.3.3"
  }
}
